<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic page setup -->
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- App icon -->
    <link rel="icon" type="image/png" href="~/administrator.png" />

    <!-- Dynamic page title -->
    <title>@ViewData["Title"] - Hobby App</title>

    <!-- Import map (if needed for modules) -->
    <script type="importmap"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>

    <!-- Custom site styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

    <!-- App-specific styles -->
    <link rel="stylesheet" href="~/WebApplication3.styles.css" asp-append-version="true"/>
</head>

<body>
<header>
    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">

            <!-- Brand link (goes to Home/Index) -->
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hobby App</a>

            <!-- Mobile menu button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation links -->
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <!-- Hobby page link -->
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Hobby</a>
                    </li>

                    <!-- Calculator page link -->
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Calculation">Calculator</a>
                    </li>

                </ul>
            </div>
        </div> 
    </nav>
</header>

<!-- Main content container -->
<div class="container">
    <main role="main" class="pb-3">
        <!-- Render page content here -->
        @RenderBody()
    </main>
</div>

<!-- Footer section -->
<footer class="border-top footer text-muted">
    <div class="container py-3">
        <!-- Dynamic year -->
        &copy; @DateTime.Now.Year - Hobby App - Built by Natalie
    </div>
</footer>

<!-- jQuery library -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap JS -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<!-- Custom JS file -->
<script src="~/js/site.js" asp-append-version="true"></script>

<!-- Optional page-specific scripts -->
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>